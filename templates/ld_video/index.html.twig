{% extends 'base.html.twig' %}

{% block title %}Videos{% endblock %}

{% block main %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>


    {% for video in videos %}
        <div>


            {% set video_show = path('video_show') %}
            <iframe width="560" height="315" src="https://www.youtube.com/embed/{{ video.link|slice(32, 11) }}"
                    title="YouTube video player" frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
            <br>
            <a href="{{ video.link }}">
                Lien de la video '{{ video.title }}'
            </a>

        </div>
    {% endfor %}

{% endblock %}
